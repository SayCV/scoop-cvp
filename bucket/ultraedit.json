    "uninstaller": {
        "script": "Start-Process 'cmd' -ArgumentList @('/c', \"$dir\\Programs\\!)卸载清除残留.bat\") -Verb RunAs -Wait | Out-Null"
    },
    "shortcuts": [
        [
            "Programs\\uedit64.exe",
            "UltraEdit x64 2021"
        ]
    ],
    "checkver": {
        "github": "https://github.com/SayCV/gh-cdn-cvp/releases",
        "regex": "ultraedit-zh_CN-x64-v([\\d.-]+).7z"
