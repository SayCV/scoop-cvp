    "version": "0.79.0",
    "url": "https://github.com/nushell/nushell/releases/download/0.79.0/nu-0.79.0-x86_64-pc-windows-msvc.zip",
    "hash": "6221e881e35535c1a22e1ca98f8ea00194887f416bfbe665e83392cef9eced4c",
    "bin": "nu.exe",
    "shortcuts": [
        [
            "nu.exe",
            "NuShell"
        ]
    ],
    "post_install": [
        "",
        "$versiondir = \"$dir\\AppData\"",
        "$companyname = 'nushell'",
        "$currentdir = \"$env:AppData\\$companyname\"",
        "",
        "Write-UserMessage -Message \"Linking $(friendly_path $currentdir) => $(friendly_path $versiondir)\" -Output:$false",
        "",
        "if (Test-Path -LiteralPath $currentdir -PathType 'Container') {",
        "    Remove-DirectoryJunctionLink -LinkName $currentdir",
        "}",
        "New-DirectoryJunctionLink -Target $versiondir -LinkName $currentdir | Out-Null",
        "",
        "Write-Host \":: Fixed Issue for Ctrl+C on Windows.\" -ForegroundColor DarkCyan",
        "Write-Host \":: See 'https://github.com/ScoopInstaller/Scoop/issues/1896' for detail.\" -ForegroundColor DarkCyan",
        "Write-Host \":: scoop config shim kiennq\"",
        "Write-Host \":: scoop reset *\"",
        "",
        ""
    ],
    "persist": "AppData",
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/nushell/nushell/releases/download/$version/nu-$version-x86_64-pc-windows-msvc.zip"
    }
}
