        "de63dc2ef45d5b094a239fc704051270f3185bf9e883132532b7e17d2fdaf81b"
    ],
    "pre_install": [
        "Remove-Item \"$dir\\`$PLUGINSDIR\", \"$dir\\Uninstall.exe\" -Force -Recurse",
        "if (-not (Test-Path \"$dir\\WeaselSetupx64.exe\")) { cmd /c mklink /h \"$dir\\WeaselSetupx64.exe\" \"$dir\\WeaselSetup.exe\" }",
        "'install-weasel.reg', 'uninstall-weasel.reg' | ForEach-Object {",
        "    $rime_user_dir = \"$(current_dir $dir)\\.rime\".Replace('\\', '\\\\')",
        "    $content = (Get-Content \"$dir\\$_\").Replace('$rime_user_dir', $rime_user_dir)",
        "    Set-Content \"$dir\\$_\" $content",
        "}",
        "cmd /c regedit.exe /s \"$dir\\install-weasel.reg\""
    ],
    "installer": {
        "script": "sudo \"$dir\\install.bat\"",
        "keep": true
    },
    "uninstaller": {
        "script": [
            "sudo \"$dir\\uninstall.bat\"",
            "Remove-Item HKCU:\\Software\\Rime -Recurse -Force"
        ]
    },
    "bin": [
        "WeaselSetup.exe",
        "WeaselDeployer.exe",
        "WeaselServer.exe"
    ],
    "shortcuts": [
        [
