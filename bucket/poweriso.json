    "depends": [
        ""
    ],
    "notes": [
        "Supports almost all CD / DVD / BD-ROM image file formats (ISO, BIN, NRG, CDI, DAA and so on)."
    ],
    "architecture": {
        "64bit": {
            "url": "https://www.poweriso.com/PowerISO8-x64.exe",
            "hash": "e07337cf4ad24cbbcf5c708b3c595e47fce0f570e4fac02028b3098364e52173"
        },
        "32bit": {
            "url": "https://www.poweriso.com/PowerISO8-x32.exe",
